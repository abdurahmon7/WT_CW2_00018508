extends layout

block content
  h1 Travel Journal Entries
  a(href="/entries/new") ➕ Add New Entry
  each entry in entries
    div(style="border:1px solid #ccc; padding:10px; margin-bottom:10px; display:flex; flex-direction:column;")
      h2= entry.title
      if entry.location
        p Location: #{entry.location}
      if entry.description
        p Description: #{entry.description}
      p Date: #{entry.date.toDateString()}
      p Posted by #{entry.user ? entry.user.displayName : 'Guest'}
      if entry.photoUrl
        img(src=entry.photoUrl, width="300")
    if user && entry.user && entry.user._id.toString() === user._id.toString()
      a(href=`/entries/${entry._id}/edit`) ✏️ Edit
      a(href='/entries/' + entry._id + '/delete', onclick="return confirm('Are you sure you want to delete this entry?')") 🗑️ Delete

    
    

